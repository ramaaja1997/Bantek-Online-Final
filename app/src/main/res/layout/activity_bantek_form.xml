<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BantekForm">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_satu"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTextView"
            android:text="INPUT FORM"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardBackgroundColor="#F0F2F7"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="14dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textSize="12dp"
                        android:textColor="#7EBE42"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CGK"
                            android:textSize="24dp"
                            android:textColor="#2F74A6"
                            android:textStyle="bold"
                            android:id="@+id/tvStDepartureCode"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jakarta"
                            android:textSize="12dp"
                            android:textColor="#ABABAB"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tvStDepartureCity"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textColor="#7EBE42"
                            android:textSize="12dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DPS"
                                android:textSize="24dp"
                                android:textColor="#2F74A6"
                                android:textStyle="bold"
                                android:id="@+id/tvStArrivalCode"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Denpasar"
                                android:textSize="12dp"
                                android:textColor="#ABABAB"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/tvStArrivalCity"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/circleblue" />

                <View
                    android:layout_width="94dp"
                    android:layout_height="126dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/rotatedottedline" />

                <View
                    android:layout_width="259dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dottedline" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/circleblue" />

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:text="Choose your departure date"/>
            <EditText
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/shapeinputform"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_navigate_next_green"
                android:hint="Choose date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:text="Choose your return date"/>
            <EditText
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/shapeinputform"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_navigate_next_green"
                android:hint="Choose date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Select type of Bantek"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/buttontypea"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_selector"
                    android:layout_margin="10dp"
                    android:text="EOB"
                    android:stateListAnimator="@null"/>
                <Button
                    android:id="@+id/buttontypeb"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_selector"
                    android:layout_margin="10dp"
                    android:text="DATA SHARING"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <Button
                android:id="@+id/submitform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="SUBMIT"
                android:textColor="#ffff"
                android:background="@drawable/selectorsubmit"/>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


    </LinearLayout>

    </ScrollView>

</LinearLayout>